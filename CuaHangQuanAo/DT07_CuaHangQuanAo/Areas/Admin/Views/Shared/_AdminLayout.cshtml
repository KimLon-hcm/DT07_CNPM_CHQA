
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OWE Admin Dashboard</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <div id="wrapper" class="d-flex">
        <!-- Sidebar -->
        <aside id="sidebar" class="d-flex flex-column p-3 text-white bg-primary">
            @Html.ActionLink("OWE ADMIN", "Index", "Home", new {area = "Admin"}, new { @class = "d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none sidebar-brand fs-4" })
            <hr>

            <ul class="nav nav-pills flex-column mb-auto sidebar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Bảng Điều Khiển", "", "", new { area = "Admin" }, new { @class = "nav-link active" })
                </li>

                <hr class="sidebar-divider" />
                <div class="sidebar-heading">Quản Lí Chung</div>

                <li class="nav-item">
                    <a href="#components-collapse" data-bs-toggle="collapse" class="nav-link">
                        <span class="nav-text">Sản Phẩm</span>
                    </a>
                    <div class="collapse" id="components-collapse">
                        <div class="collapse-inner">
                            @Html.ActionLink("Tất cả Sản Phẩm", "Index", "SanPham", new { area = "Admin" }, new { @class = "collapse-item" })
                            @Html.ActionLink("Thêm Sản Phẩm", "Them", "SanPham", new { area = "Admin" }, new { @class = "collapse-item" })
                        </div>
                    </div>
                </li>

                <li class="nav-item">
                    <a href="#utilities-collapse" data-bs-toggle="collapse" class="nav-link">
                        <span class="nav-text">Khách Hàng</span>
                    </a>
                    <div class="collapse" id="utilities-collapse">
                        <div class="collapse-inner">
                            @Html.ActionLink("Danh sách", "", "", new { area = "Admin" }, new { @class = "collapse-item" })
                            @Html.ActionLink("Thêm KH", "", "", new { area = "Admin" }, new { @class = "collapse-item" })
                        </div>
                    </div>
                </li>

                <hr class="sidebar-divider" />
                <div class="sidebar-heading">OWE SHOP</div>

                <li class="nav-item">
                    @Html.ActionLink("Đơn Hàng", "", "", new { area = "Admin" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Thống Kê", "", "", new { area = "Admin" }, new { @class = "nav-link" })
                </li>
            </ul>

            @* <div class="text-center mt-auto sidebar-toggle-wrapper">
                <button id="sidebarToggle" class="btn rounded-circle">
                    <svg class="chevron-left" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                    </svg>
                </button>
            </div> *@
        </aside>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Header -->
            <header class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow-sm">
                <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                    <div class="input-group">
                        <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search">
                        <button class="btn btn-primary" type="button">
                            🔍
                        </button>
                    </div>
                </form>

                <ul class="navbar-nav ms-auto">
                    <div class="vr mx-2 d-none d-lg-block"></div>
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <span class="me-2 d-none d-lg-inline text-gray-600 small">OWE</span>
                            <img class="img-profile rounded-circle"
                                 src="/images/logos/owelogos.jpg"
                                 style="width: 2.25rem; height: 2.25rem;">
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="userDropdown">
                            <li>
                                @Html.ActionLink("Hồ sơ", "", "", null, new { @class = "dropdown-item" })
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                @Html.ActionLink("Đăng xuất", "", "", null, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>
                </ul>
            </header>

            <!-- Main Content -->
            <main id="content" class="container-fluid">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="bg-white p-4 text-center mt-auto">
                <span>Copyright &copy; OWE Admin</span>
            </footer>
        </div>
    </div>

    <!-- JS -->
    @* <script>
        document.addEventListener("DOMContentLoaded", function () {
            const wrapper = document.getElementById("wrapper");
            const toggleBtn = document.getElementById("sidebarToggle");

            toggleBtn.addEventListener("click", function () {
                wrapper.classList.toggle("toggled");
            });
        });
    </script> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
