@{
    // Báo cho View này sử dụng Layout của Admin
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "SanPham";
}

@model IEnumerable<DT07_CuaHangQuanAo.Models.HangHoa>

@{
    ViewData["Title"] = "Danh sách Sản phẩm";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        <button type="button" class="btn btn-primary"
                onclick="window.location.href='@Url.Action("Them", "SanPham", new { area = "Admin" })'">
            <i class="fas fa-plus"></i> Thêm sản phẩm mới
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Hàng</th>
                        <th>Loại Hàng</th>
                        <th>Thương Hiệu</th>
                        <th>Trạng Thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenHang</td>
                            <td>@item.IdloaiHangNavigation?.TenLoaiHang</td>
                            <td>@item.IdthuongHieuNavigation?.TenThuongHieu</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Đang bán</span>
                                }
                                else
                                {

                                    <span class="badge bg-danger">Ngừng bán</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Idhang" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.Idhang" class="btn btn-info btn-sm">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.Idhang" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>